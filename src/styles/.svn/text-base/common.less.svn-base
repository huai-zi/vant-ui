@import './variable.less';
/** 公共样式 */

/*暂无数据提示*/
.cls-no-data{
    text-align: center;
    padding-top: 1.6rem;
    padding-bottom: 1.8rem;
    font-size: 1.3rem;
}
        
/* 日期范围查询条件样式 */
.date-range-filter-box{
    background: #FFF;
    margin-top: 0.5rem;
    padding-left: 0.6rem;
    .date-range-filter{
        padding-top: 0.6rem;padding-bottom: 0.6rem;font-size:1.3rem;color:#B4B4B4;
        .middle-split{
            border-right: 1px solid #ddd;padding-right: 6px;
        }
        .select-text{
            color: @primary-color;
        }
        .triangle-box{
            min-width: 5px;
            /*朝下的三角形*/
            .triangle {
                width:0;height:0;overflow:hidden;
                border-left:5px solid transparent;
                border-right:5px solid transparent;
                border-top:5px solid #999;
            }
        }
    }
    .btn-date-range-filter{
        padding-top: 0.6rem;padding-bottom: 0.6rem;background: @primary-color;color:#FFF;font-size:1.4rem
    }
}